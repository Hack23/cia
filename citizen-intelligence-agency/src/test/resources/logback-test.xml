<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
<jmxConfigurator />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%date [%thread] %-5level %logger{5} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="net.sf.ehcache" level="error"/>
  <logger name="com.mchange" level="warn"/>
  <logger name="org.hsqldb" level="warn"/>
  <logger name="org.hibernate" level="warn"/>
  <logger name="com.gargoylesoftware.htmlunit" level="error"/>

  <logger name="org.hibernate" level="warn"/>
  <logger name="org.quartz" level="warn"/>
  <logger name="atomikos" level="error"/>
  <logger name="com.atomikos" level="error"/>
  <logger name="org.hibernate.cache.ehcache" level="error"/>

  <logger name="org.eclipse" level="info"/>
  <logger name="org.openid4java" level="warn"/>

  <logger name="org.springframework" level="warn"/>
  <logger name="org.springframework.web" level="warn"/>
  <logger name="org.springframework.oxm.jaxb" level="error"/>

  <logger name="org.springframework.security" level="warn"/>
  <logger name="org.atmosphere" level="error" />




  <logger name="com.hack23.cia" level="info"/>

  <root level="info">
    <appender-ref ref="console" />
  </root>

</configuration>